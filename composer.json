{
    "name": "hotelchamp/larabee",
    "description": "A Laravel wrapper for working with the chargebee API, allowing you to manage subscriptions with ease",
    "keywords": [
        "chargebee",
        "chargebee api",
        "laravel",
        "laravel chargebee"
    ],
    "homepage": "https://github.com/hotelchamp/larabee",
    "license": "MIT",
    "authors": [
        {
            "name": "Khalid Charaa",
            "email": "k.charaa@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "chargebee/chargebee-php": ">=2, <3",
        "illuminate/contracts": "^9.45",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^6.3",
        "orchestra/testbench": "^v7.17.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Hotelchamp\\Larabee\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hotelchamp\\Larabee\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hotelchamp\\Larabee\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
